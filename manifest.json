{
  "manifest_version": 3,
  "name": "Copy URL and Run Shortcut",
  "version": "1.0",
  "description": "Copy the URL and run macOS shortcut",
  "permissions": [
    "activeTab"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ]
}
